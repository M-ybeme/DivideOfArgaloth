@page "/characters"

<div class="container-fluid bg-dark text-light">
    <div class="row">
        <div class="col-12 text-center py-3">
            <h1>Characters of Anferdale</h1>
        </div>
    </div>
    <div class="row mt-4">
        @foreach (var character in CharacterList)
        {
            <div class="col-md-6 mb-4">
                <div class="card bg-secondary text-light">
                    <div class="row no-gutters">
                        <div class="col-md-4 text-center">
                            <img src="@character.ImageUrl"
                                 class="rounded-circle img-thumbnail m-3"
                                 style="width: 150px; height: 150px;" />
                            <h5 class="mt-2">@character.Name</h5>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <p><strong>Race:</strong> @character.Race</p>
                                <p><strong>Age:</strong> @character.Age</p>
                                <p><strong>Appearance:</strong> @character.Appearance</p>
                                <p><strong>Personality:</strong> @character.Personality</p>
                                <p><strong>Skills and Abilities:</strong> @character.SkillsAndAbilities</p>
                                <p><strong>Role in the Community:</strong> @character.RoleInCommunity</p>
                                <p><strong>Backstory:</strong> @character.Backstory</p>
                                <p><strong>Interactions:</strong> @character.Interactions</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

